<div class='row'>
  <div class='panel radius columns small-12'>
    <h4><%= t('text.models.account.titles.profile') %></h4>

    <dl>
      <dt><%= t('text.models.account.name') %></dt>
      <dd><%= @account.name %></dd>
      <dt><%= t('text.models.account.email') %></dt>
      <dd><%= @account.email %></dd>
      <dt><%= t('text.models.account.time_zone') %></dt>
      <dd><%= @account.time_zone %></dd>
    </dl>

    <p><%= link_to t('links.models.account.edit'), edit_account_path %></p>
  </div>
</div>

<div class='row'>
  <% if @account.manages_payout_accounts? %>
    <div class='panel radius columns small-6'>
      <h4><%= t('text.models.account.titles.payout_accounts') %></h4>

      <%= render @account.payout_accounts %>

      <p><%= link_to t('links.models.payout_account.new'),
                     new_payout_account_path %></p>
    </div>
  <% end %>

  <div class='panel radius columns small-6'>
    <h4><%= t('text.models.account.titles.payment_methods') %></h4>

    <%= render @account.payment_methods %>

    <p><%= link_to t('links.models.payment_method.new'),
                   new_payment_method_path %></p>
  </div>
</div>

<div class='row'>
  <div class='panel callout radius columns small-12'>
    <h4><%= t('text.models.account.titles.delete') %></h4>

    <p><%= link_to t('links.models.account.destroy'), @account, method: :delete,
                   data: {
                     confirm: t('controllers.accounts.destroy.confirm')
                   } %></p>
  </div>
</div>
