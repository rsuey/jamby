<div class='row'>
  <div class='columns small-6 small-centered'>
    <h3><%= t('text.models.group_session.titles.new') %></h3>
  </div>

  <%= render 'shared/errors', record: @group_session %>

  <%= form_for @group_session do |f| %>
    <div class='columns small-6 small-centered'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class='columns small-6 small-centered'>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class='columns small-6 small-centered'>
      <%= f.label :starts_at %>
      <%= f.datetime_select :starts_at, { ampm: true }, class: 'inline' %>
    </div>

    <div class='columns small-6 small-centered'>
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <div class='columns small-6 small-centered'>
      <%= f.submit button_name, class: 'button' %>
      <% if @group_session.persisted? %>
        or <%= link_to t('links.models.group_session.delete'),
                    @group_session,
                    method: :delete,
                    data: {
                      confirm: t('controllers.group_sessions.destroy.confirm')
                    } %>
      <% end %>
    </div>
  <% end %>
</div>
